<div class="col-sm-3 sidenav no-padding">
  
  <div class="left">
<div class="row no-margin">
    <div class="top form-group">
        <select class="form-control" id="select-type-post">
            <option  value="post-new">Bài đăng mới nhất</option>
            <option  value="post-popular ">Bài đăng phổ biến nhất</option>
            <option  value="post-friends">Bài đăng của bạn bè</option>
            <option  value="post-liked">Bài đăng đã thích</option>
        </select>
        <a href="#createNewPost" class="create-new-post" data-toggle="modal" 
            title="Tạo 1 bài đăng mới"></a>
    </div>
</div>
        <% allTag.forEach(function(item) { %>
          <div class="row no-margin d-flex align-items-center catelogy-item"><a href="/post/tag/<%= item._id %>"> <%= item.name %></a></div>
          <% }); %>
  </div>
</div>




<div class="modal fade" id="createNewPost" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tạo bài đăng mới</h4>
            </div>
            <div class="modal-body">
                <div class="row no-margin modal-title-row">
                    <div class="col-sm-2 modal-title-row-label ">Tiêu đề:</div>
                    <div class="col-sm-9"><input type="text" class="form-control modal-title-row input" id="post-createNew-title" placeholder="Nhập tiêu đề bài viết" required></div>
                </div>
                <div class="row no-margin modal-description-row">
                    <div class="col-sm-2 modal-description-row-label">Mô tả:</div>
                    <div class="col-sm-9 modal-description-row-input"><textarea class="form-control" rows="14" id="post-createNew-description" placeholder="Nhập nội dung bài viết"></textarea></div>
                </div>
                <div class="row no-margin modal-tag-row">
                    <div class="col-sm-2 modal-tag-row-label">Tags:</div>
                    <div class="col-sm-7">
                        <select class="form-control" name = "post-createNew-Tag" id="post-createNew-Tag">
                            <% allTag.forEach(function(item) { %>
                            <option  value="<%= item._id %>"><%= item.name %> </option>
                            <% }); %> 
                        </select>
                    </div>
                    
                </div>
                <div class="row no-margin modal-btn-row">
                    <div class="col-sm-7"></div>
                    <div class="col-sm-2 ">
                        <button
                        type="button"
                        id = "post-createNew-btn"
                        class="btn btn-custom btn-success"
                        >Đăng tải</button>
                      </div>
                      <div class="col-sm-2 ">
                        <button
                        type="button"
                        class="btn btn-custom btn-warning" data-dismiss="modal"
                        >Hủy bỏ</button> 
                      </div>
                </div>

            </div>
        </div>
        </div>
    
</div>